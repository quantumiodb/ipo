generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IpoStock {
  id              String    @id @default(cuid())
  symbol          String    
  companyName     String
  market          Market
  expectedPrice   Float?
  priceRange      String?
  sharesOffered   Int?
  ipoDate         DateTime?
  status          IpoStatus @default(UPCOMING)
  description     String?
  sector          String?
  industry        String?
  underwriters    String[]
  marketCap       Float?
  revenue         Float?
  netIncome       Float?
  employees       Int?
  website         String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([id, symbol])
  @@map("ipo_stocks")
}

enum Market {
  US
  HK
}

enum IpoStatus {
  UPCOMING
  PRICING
  LISTED
  WITHDRAWN
  POSTPONED
}